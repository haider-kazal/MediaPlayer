<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.mehedihassanpiash.musicplayer.Player">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/music"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="|&lt;"
            android:id="@+id/btRV"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btFB" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="&lt;&lt;"
            android:id="@+id/btFB"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btRV"
            android:layout_toEndOf="@+id/btRV" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="||"
            android:id="@+id/btPlay"
            android:layout_alignTop="@+id/btFB"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=">>"
            android:id="@+id/btFF"
            android:layout_alignTop="@+id/btPlay"
            android:layout_toLeftOf="@+id/btNext"
            android:layout_toStartOf="@+id/btNext" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=">|"
            android:id="@+id/btNext"
            android:layout_alignTop="@+id/btFF"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
